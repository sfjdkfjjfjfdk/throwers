<div class="row justify-content-around mb-3">
  <div class = "col-7">
     <h4>新規会員登録</h4>
  </div>
</div>

 <div class="row justify-content-around">
   <div class="col-7 ml-5">
     <table class = "table table-borderless" >
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

     <tr class="field">
       <td><%= f.label :名前 %></td>
       <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
     </tr>

     <tr class="field">
       <td><%= f.label :専門種目 %></td>
       <td><%= f.text_field :event, autofocus: true, autocomplete: "event" %></td>
     </tr>

     <tr class="field">
       <td><%= f.label :メールアドレス %></td>
       <td><%= f.email_field :email, autocomplete: "email", size: 40 %></td>
     </tr>

     <tr class="field">
       <td><%= f.label :パスワード %>
          <% if @minimum_password_length %>
         <em>(<%= @minimum_password_length %> 文字以上)</em>
         <% end %>
       </td>
       <td><%= f.password_field :password, autocomplete: "new-password" %></td>
     </tr>

     <tr class="field">
       <td><%= f.label :パスワード %><em>(確認用)</em></td>
       <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
     </tr>

     </table>
     <%= f.submit "新規登録", class:"btn btn-success" %>
     <% end %>
  </div>
 </div>

     <div class = "row justify-content-around mt-4">
       <div class = "col-7">
         <h4>既に会員登録済みの方</h4>
       </div>
     </div>

     <div class = "row justify-content-around mt-3">
       <div class = "col-6 mr-5">
          <%= render "user/shared/links" %>
       </div>
     </div>

