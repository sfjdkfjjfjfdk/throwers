<%= form_tag(search_user_path,:method => 'get') do %>
  <%= label_tag '名前で検索' %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :address => nil %>
<% end %>

<div class= "container" >
　<div class = "row">
     <div class = "col-3 mb-2">
       <h3>ユーザページ</h3>
         <table class = "table table-borderless">
           <tr>
             <td>名前</td>
             <td><%= @user.name %></td>
             </tr>
           <tr>
             <td>専門種目</td>
             <td><%= @user.event %></td>
           </tr>
         </table>
         <% if user_signed_in? && @user == current_user %>
         　<%= link_to "編集する", edit_user_path(@user), class: "btn btn-success" %>
         　<%= link_to "退会する",confirm_user_path(@user), class: "btn btn-danger" %>
        <% end %>
        <!--ログインユーザーでない場合にフォローボタン表示-->
        <% if current_user != @user %>
         <% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
         <% else %>
          <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"btn-sm btn-success" %>
         <% end %>
        <% end %>
        <!--フォロー、フォロワー数-->
        <%= link_to follows_user_path(@user) do %>
         <h6>フォロー<%= @following_users.count %></h6>
        <% end %>
        <%= link_to followers_user_path(@user) do %>
         <h6>フォロワー<%= @follower_users.count %></h6>
        <% end %>
        <%= link_to "投稿されている練習メニュー一覧", posts_path(@posts) %><br>
        <%= link_to "いいねした投稿", likes_user_path(@user) %><br>
     </div>

     <div class = "col-9">
      <h3>ユーザー一覧</h3>
       <table class = "table table-border">
        <thead>
          <tr>
           <th>名前</th>
           <th>専門種目</th>
           <th></th>
           <th></th>
           <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
         <tr>
          <td><%= user.name %></td>
          <td><%= user.event %></td>
          <td>フォロー<%= user.following_user.count %></td>
          <td>フォロワー<%= user.follower_user.count %></td>
          <td><%= link_to "ユーザー詳細ページ", user_path(user) %></td>
         </tr>
        </tbody>
        <% end %>
       </tbody>
   　 </div>
  </div>
</div>
