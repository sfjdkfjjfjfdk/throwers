　<div class = "row">
     <div class = "col-2 ml-5 mt-3 mb-2">
         <h2>ユーザー詳細ページ</h2>
   　 </div>
　</div>

  <div class = "row" >
     <div class = "col-7 ml-5" >
         <table class = "table table-borderless">
             <tr>
                 <td>名前</td>
                 <td><%= @user.name %></td>
             </tr>
             <tr>
                 <td>専門種目</td>
                 <td><%= @user.event %></td>
             </tr>
             <tr>
                 <td>目標</td>
                 <td><%= @user.target %></td>
             </tr>
             <tr>
                 <td>目標を達成するための現状の課題</td>
                 <td><%= @user.task %></td>
             </tr>
         </table>
     </div>
  </div>

  <div class = "row" >
      <div class = "col-2 ml-5 mt-3">
         <% if user_signed_in? && @user == current_user %>
          <div><%= link_to "編集する", edit_user_path(@user), class: "btn btn-success" %></div>
          <div><%= link_to "退会する",confirm_user_path(@user), class: "btn btn-danger" %></div>
        <% end %>
      </div>
  </div>

  <!--ログインユーザーでない場合にフォローボタン表示-->
  <% if current_user != @user %>
   <% if current_user.following?(@user) %>
     <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn-sm btn-danger" %>
   <% else %>
     <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post, class:"btn-sm btn-success" %>
   <% end %>
 <% end %>

  <!--フォロー、フォロワー数-->
  <%= link_to follows_user_path(@user) do %>
   <h6>フォロー<%= @following_users.count %></h6>
  <% end %>
  <%= link_to followers_user_path(@user) do %>
   <h6>フォロワー<%= @follower_users.count %></h6>
  <% end %>

  <%= link_to "投稿されている練習メニュー一覧", posts_path(@posts) %>
  <%= link_to "いいねした投稿", likes_user_path(@user) %>
  <%= link_to "ユーザー一覧", users_path(@users) %>
