<h2>検索結果</h2>
<!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td><%= user.event %></td>
        </tr>
        <tr>
          <td>フォロー<%= user.following_user.count %></td>
        </tr>
        <tr>
          <td>フォロワー<%= user.follower_user.count %></td>
        </tr>
        <tr>
          <td><%= link_to "ユーザー詳細ページ", user_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
      <% @posts.each do |post| %>
        <p>日付:<%= link_to post.date, post %></p>
        <p>投稿者:<%= link_to post.user.name, post.user %></p>
        <p>天気:<%= post.weather %></p>
        <p>練習時間:<%= post.time %></p>
        <p>練習メニュー:<%= post.practice %></p>
        <p>本日の練習で、課題に対してのスキルアップしたこと:<%= post.skill %></p>
        <p>本日の練習での課題に対して明日の練習で改善、意識すること:<%= post.improvement %></p>

       <!---いいねの数--->
       <%= post.likes.count %> いいね
       <p>コメント件数：<%= post.comments.count %></p>
      <% end %>

  <% end %>
