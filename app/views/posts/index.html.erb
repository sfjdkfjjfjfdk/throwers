  <div class="row justify-content-around mb-3">
   <div class = "col-5 ml-5" >
     <h4>練習メニュー一覧</h4>
   </div>
   <div class = "col-5">
     <%= form_tag(search_posts_path,:method => 'get') do %>
       <%= label_tag '日付で検索' %>
       <%= text_field_tag :search %>
       <%= submit_tag '検索', :address => nil %>
    <% end %>
   </div>
  </div>

  <%= render 'posts', posts: @posts %>

 <div class="row justify-content-around mb-3">
   <div class = "col-2" >
     <%= paginate (@posts) %>
   </div>
 </div>