 <%= form_with model: post do |f| %>
 <div class="row justify-content-around">
   <div class = "col-7">
     <table class = "table table-borderless">
       <tr>
        <td>投稿者名</td>
        <td><%= f.text_field :name %></td>
       </tr>
       <tr>
        <td>日付</td>
        <td><%= f.text_field :date %></td>
       </tr>
       <tr>
        <td>天気</td>
        <td><%= f.text_field :weather %></td>
       </tr>
       <tr>
        <td>練習時間</td>
        <td><%= f.text_field :time %></td>
       </tr>
       <tr>
        <td>練習メニュー</td>
        <td><%= f.text_area :practice, size: "50x15" %></td>
       </tr>
       <tr>
        <td>本日の練習で良かったこと</td>
        <td><%= f.text_area :skill, size: "50x5" %></td>
       </tr>
       <tr>
        <td>明日の練習で改善、意識すること</td>
        <td><%= f.text_area :improvement, size: "50x5" %></td>
        <td></td>
       </tr>
     </table>
     <div class="text-center">
      <%= f.submit "投稿する", class:"btn btn-success" %>
     </div>
     <% end %>
    </div>
  </div>
