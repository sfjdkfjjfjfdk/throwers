  <div class="row justify-content-around mb-3">
   <div class = "col-8" >
    <h4>練習メニュー詳細</h4>
   </div>
  </div>

   <div class="row justify-content-around">
    <div class = "col-7">
     <!--%= form_with model: @post do |f| %>-->
     <table class = "table table-borderless">
       <tr>
        <td>投稿者名</td>
        <td><%= @post.user.name %></td>
        <!--<td>%= f.text_field :name, readonly: true %></td>-->
       </tr>
       <tr>
        <td>日付</td>
        <td><%= @post.date %></td>
        <!--<td>%= f.text_field :date, readonly: true %></td>-->
       </tr>
       <tr>
        <td>天気</td>
        <td><%= @post.weather %></td>
        <!--<td>%= f.text_field :weather, readonly: true %></td>-->
       </tr>
       <tr>
        <td>練習時間</td>
        <td><%= @post.time %></td>
        <!--<td>%= f.text_field :time, readonly: true %></td>-->
       </tr>
       <tr>
        <td>練習メニュー</td>
        <td><%= @post.practice %></td>
        <!--<td>%= f.text_area :practice, size: "50x10", readonly: true %></td>-->
       </tr>
       <tr>
        <td>本日の練習で良かったこと</td>
        <td><%= @post.skill %></td>
        <!--<td>%= f.text_area :skill, size: "50x3", readonly: true %></td>-->
       </tr>
       <tr>
        <td>明日の練習で改善、意識すること</td>
        <td><%= @post.improvement %></td>
        <!--<td>%= f.text_area :improvement, size: "50x3", readonly: true %></td>-->
      <!--% end %>-->
     </table>
     <div class = "text-center">
       <% if @post.user_id == current_user.id %>
        <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-success" %>
        <%= link_to "削除する", post_path(@post), class: "btn btn-danger" , method: :delete %>
       <% end %>
      </div>
    </div>
    <div class = "col-5" >
    <!--いいね-->
     <% if @post.liked_by?(current_user) %>
      <%= link_to post_likes_path(@post), method: :delete, class: "favorite_btn" do %>
      ♥<%= @post.likes.count %> いいね
     <% end %>
     <% else %>
      <%= link_to post_likes_path(@post), method: :post, class: "favorite_btn" do %>
      ♡<%= @post.likes.count %> いいね
     <% end %>
    <% end %>
    <!--コメントフォーム-->
     <%= form_with(model:[@post, @comment], local: true) do |f| %>
      <%= f.text_area :comment,placeholder: "コメントをここに", size: "30x5" %>
      <%= f.submit "送信する" %>
     <% end %>
    <!--コメント一覧部分-->
     <p>コメント件数：<%= @post.comments.count %></p>
     <% @post.comments.each do |comment| %>
      <% if comment.user.profile_image.attached? %>
       <%= image_tag comment.user.get_profile_image(50, 50) %>
      <% end %>
       <%= comment.user.name %>
       <%= comment.created_at.strftime('%Y/%m/%d') %>
      <% if comment.user == current_user %>
       <%= link_to "削除する", post_comment_path(comment.post, comment), class: "btn btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %><br>
      <% end %>
       <%= comment.comment %><br>
     <% end %>
    </div>
   </div>
